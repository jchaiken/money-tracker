<div class="page-content">
  <div class="page-content-col">
    <div class="row">
      <%= render partial: "pages/navigation" %>
      <p id="notice"><%= notice %></p>
      <h1>Listing Categories</h1>
      <div class="col-md-6 col-md-offset-3">
        <table>
          <thead>
            <tr>
              <th>Category Name</th>
              <th colspan="1"></th>
            </tr>
          </thead>
        
          <tbody>
            <% @categories.each do |category| %>
              <tr>
                <td><%= category.name %></td>
                <td>
                  <div class="btn-group pull-right">
                    <button class="btn blue btn-xs btn-outline dropdown-toggle" data-toggle="dropdown">Actions</button>
                    <ul class="dropdown-menu pull-right">
                      <li>
                        <%= link_to category_path(category) do %>
                            View
                        <% end %>
                      </li>
                      <li>
                        <%= link_to edit_category_path(category) do %>
                            Edit
                        <% end %>
                      </li>
                      <li>
                        <%= link_to category, method: :delete, data: { confirm: 'Are you sure?' } do %>
                            Delete
                        <% end %>
                      </li>
                    </ul>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table><br>
        <%= link_to 'New Category', new_category_path %>
      </div>
    </div>
  </div>
</div>