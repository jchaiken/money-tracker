<%= render partial: "pages/navigation" %>
<div class="container-fluid">
  <div class="col-md-6 col-md-offset-3">
    <%= render 'shared/flash_messages' %>
    <%= link_to 'Back to Accounts', root_path %> | <%= link_to 'New Account', new_account_path %>
    <div class="button-list">
      <h1>Loans</h1><br>
      <table id="myTable">
        <thead>
          <tr>
            <th></th>
            <th>Name</th>
            <th>Payment</th>
            <th>Balance</th>
          </tr>
        </thead>
      
        <tbody>
          <% @loans.each do |loan| %>
            <tr>
              <td style="text-align:center"><%= "Paid" if loan.paid? %></td>
              <td><%= link_to loan.name, account_path(loan) %></td>
              <td style="text-align:right"><%= number_to_currency(loan.minimum_payment.abs) %></td>
              <td style="text-align:right"><%= number_to_currency(loan.balance.abs) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>