<p id="notice"><%= notice %></p>

<h1>Listing Cash Accounts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Balance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cash_accounts.each do |cash_account| %>
      <tr>
        <td><%= cash_account.name %></td>
        <td><%= cash_account.balance %></td>
        <td><%= link_to 'Show', cash_account %></td>
        <td><%= link_to 'Edit', edit_cash_account_path(cash_account) %></td>
        <td><%= link_to 'Destroy', cash_account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

