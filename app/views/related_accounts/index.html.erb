<p id="notice"><%= notice %></p>

<h1>Listing Related Accounts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Account type</th>
      <th>Balance</th>
      <th>Due date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @related_accounts.each do |related_account| %>
      <tr>
        <td><%= related_account.name %></td>
        <td><%= related_account.account_type %></td>
        <td><%= related_account.balance %></td>
        <td><%= related_account.due_date %></td>
        <td><%= link_to 'Show', related_account %></td>
        <td><%= link_to 'Edit', edit_related_account_path(related_account) %></td>
        <td><%= link_to 'Destroy', related_account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

